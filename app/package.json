{
  "name": "cablescout-app",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cablescout/cablescout.git",
    "directory": "app"
  },
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc && copyfiles --up 1 ./src/tray-icon/* ./dist/",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "yarn build && electron ./dist/main.js"
  },
  "build": {
    "appId": "io.cablescout",
    "productName": "Cablescout",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "pkg"
    },
    "win": {
      "target": "msi"
    },
    "forceCodeSigning": true
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "eslint": "^7.26.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-log": "^4.3.5",
    "js-yaml": "^4.1.0",
    "sudo-prompt": "^9.2.1"
  }
}
